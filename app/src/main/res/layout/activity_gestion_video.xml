<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GestionVideoActivity">


    <EditText
        android:id="@+id/txtNombreVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Ingrese el nombre del video"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btnGrabarVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grabar nuevo video"
        android:onClick="grabarVideo"
        android:layout_marginTop="5dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:id="@+id/listVideos"
                android:layout_width="match_parent"
                android:layout_height="633dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>